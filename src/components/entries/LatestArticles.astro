---
const { title, url, description, pubDate, author, image, authorImage } =
  Astro.props;
---

<article class="flex max-w-xl flex-col items-start justify-between">
  <div class="flex items-center gap-x-4 text-xs">
    <time
      datetime="2020-03-16"
      class="text-neutral-400 dark:text-neutral-200 uppercase text-xs"
      >{pubDate}</time
    >
  </div>
  <div class="group relative">
    <h3
      class="mt-3 text-lg font-semibold leading-6 text-neutral-900 dark:text-white group-hover:text-blue-400">
      <a href={url} title={title}>
        <span class="absolute inset-0"></span>
        {title}
      </a>
    </h3>
    <p
      class="mt-5 text-sm leading-6 text-neutral-400 dark:text-neutral-200 line-clamp-3">
      {description}
    </p>
  </div>
</article>
