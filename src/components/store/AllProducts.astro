---
import { store } from "../../data/store.json";
---

<section>
  <div class="mx-auto max-w-3xl px-8 py-24 sm:py-32">
    <div class="mx-auto max-w-2xl">
      <div>
        <div>
          <div>
            <p
              class="text-2xl font-medium tracking-tight text-neutral-900 dark:text-white sm:text-4xl">
              Welcome yo my store
            </p>
          </div>
          <p class="mt-4 text-neutral-400 dark:text-neutral-300">
            Look around and see if you like something that you like.
          </p>
        </div>

        <div class="mt-12 lg:mt-24">
          <div
            class="mt-12 grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-12 border-t border-b dark:border-neutral-700 py-12 lg:grid-cols-2">
            {
              store.map((template) => (
                <>
                  <div class="group relative">
                    <div>
                      <img
                        src={template.image}
                        alt="{template.name}"
                        class="aspect-[384/246] rounded-lg object-cover bg-center h-full border border-white/10"
                      />
                    </div>
                    <div class="mt-4 flex items-center justify-between space-x-8 text-lg font-semibold leading-6 text-neutral-900 dark:text-white group-hover:text-blue-400">
                      <h3>
                        <a href={template.url}>
                          <span aria-hidden="true" class="absolute inset-0" />
                          {template.name}
                        </a>
                      </h3>
                      <p>${template.price}</p>
                    </div>
                    <p class="mt-1 text-sm leading-6 text-neutral-400 dark:text-neutral-200">
                      {template.type}
                    </p>
                  </div>
                </>
              ))
            }

            <!-- More products... -->
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
